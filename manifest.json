{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Jonty Save ChatGPT",
    "description": "Download ChatGPT conversations into PDF, Text, and Markdown files. - Santized by Jonty",
    "version": "1.0",
    "manifest_version": 3,
    "default_locale": "en",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "activeTab",
        "storage",
        "webRequest",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}